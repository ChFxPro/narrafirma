{
  "compilerOptions": {
    "rootDir": "./webapp/source",
    "baseUrl": "./webapp/source",
    "target": "ES2020",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "outDir": "./webapp/js/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["webapp/**/*"]
}

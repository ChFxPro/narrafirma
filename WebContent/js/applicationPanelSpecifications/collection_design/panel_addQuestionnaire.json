{
    "id": "panel_addQuestionnaire",
    "displayName": "Add questionnaire",
    "displayType": "panel",
    "section": "collection_design",
    "modelClass": "DesignQuestionnaire",
    "panelFields": [
        {
            "id": "questionForm_Label",
            "dataType": "none",
            "displayType": "label",
            "displayPrompt": "Design a specific question form (questionnaire)."
        },
        {
            "id": "questionForm_shortName",
            "dataType": "string",
            "required": true,
            "displayType": "text",
            "displayName": "Title",
            "displayPrompt": "Please enter a unique short name for the question form to refer to it elswhere in the project."
        },
        {
            "id": "questionForm_title",
            "dataType": "string",
            "required": true,
            "displayType": "text",
            "displayName": "Title",
            "displayPrompt": "Please enter a title for the question form."
        },
        {
            "id": "questionForm_participantGroups",
            "dataType": "string",
            "required": true,
            "displayType": "text",
            "displayName": "Participant groups",
            "displayPrompt": "Which participant groups is this questionnaire intended for?"
        },
        {
            "id": "questionForm_startText",
            "dataType": "string",
            "required": true,
            "displayType": "textarea",
            "displayName": "Introduction",
            "displayPrompt": "Please enter an introduction to be shown at the start of the form, after the title."
        },
        {
            "id": "questionForm_image",
            "dataType": "string",
            "required": true,
            "displayType": "text",
            "displayName": "Image",
            "displayPrompt": "You can link to a logo or other image to show at the top of the form."
        },
        {
            "id": "questionForm_elicitingQuestions",
            "dataType": "array",
            "required": true,
            "displayType": "grid",
            "displayConfiguration": "panel_chooseElicitingQuestion",
            "displayName": "Eliciting questions",
            "displayPrompt": "Add one or more eliciting questions from the ones you have previously designed."
        },
        {
            "id": "questionForm_storyQuestions",
            "dataType": "array",
            "required": true,
            "displayType": "grid",
            "displayConfiguration": "panel_chooseStoryQuestion",
            "displayName": "Story questions",
            "displayPrompt": "Add one or more story questions from the ones you have previously designed."
        },
        {
            "id": "questionForm_particpantQuestions",
            "dataType": "array",
            "required": true,
            "displayType": "grid",
            "displayConfiguration": "panel_chooseParticipantQuestion",
            "displayName": "Participant questions",
            "displayPrompt": "Add one or more participant questions from the ones you have previously designed."
        },
        {
            "id": "questionForm_endText",
            "dataType": "string",
            "required": true,
            "displayType": "textarea",
            "displayName": "End of form text",
            "displayPrompt": "Please enter any text to be shown at the end of the form."
        }
    ]
}